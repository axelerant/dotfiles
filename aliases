alias l="exa -lh --git"
alias a="exa -lha --git"
alias c='clear'
alias v="vim"
alias o="open"
alias ls="exa --git"

alias reload="source ~/.zshrc"
alias path='echo $PATH | tr ":" "\n"'

alias g="git"
alias gbc='git checkout $(git branch -a | cut -c 3- | fzf)'

alias genkeys='ssh-keygen -t rsa -b 4096 -C "[**YOUR EMAIL ADDRESS**]'
alias copykeys='cat ~/.ssh/id_rsa.pub | pbcopy'

alias vu='vagrant up'
alias vs='vagrant ssh'
alias vh='vagrant halt'
alias vp='vagrant provision'